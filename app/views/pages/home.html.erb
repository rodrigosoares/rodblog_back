<title>Rodrigo Soares</title>

<%= render 'shim' %>
<%= render 'navigation' %>
<%= render 'header' %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2><%= @post.title %></h2>
      <p class="lead"><%= @post.abstract %></p>
      <small>Publicado em <%= @post.created_at.strftime '%d/%m/%Y' %></small>
      <p><%= simple_format @post.content %></p>
      <hr>

      <div class="pull-right">
        <a class="btn btn-default" href="<%= posts_path %>">Mais posts &rarr;</a>
      </div>
    </div>
  </div>
</div>

<%= render 'footer' %>
